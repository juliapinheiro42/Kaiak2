@model IEnumerable<Kaiak2.Models.Promocao>

@{
    ViewData["Title"] = "Index";
}

<h1>Promoções</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Promo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor_Promo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Promo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor_Promo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Promo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Promo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Promo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
